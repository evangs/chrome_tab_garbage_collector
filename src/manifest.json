{
  "manifest_version": 2,

  "name": "Tab Exterminator",
  "description": "This extension closes tabs that haven't been active for a while",
  "version": "1.0",

  "background": {
      "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "windows",
    "storage"
  ]
}